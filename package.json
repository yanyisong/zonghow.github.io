{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run clean && npm run yuque-sync && npm run rm-temp-md && npm run build:hexo",
    "clean": "npm run clean:hexo && npm run clean:posts",
    "yuque-sync": "yuque-hexo sync",
    "build:hexo": "hexo generate",
    "clean:hexo": "hexo clean",
    "clean:posts": "rimraf source/_posts/*",
    "rm-temp-md": "rimraf source/_posts/qyfd8m.md"
  },
  "hexo": {
    "version": "4.2.1"
  },
  "dependencies": {
    "bulma-stylus": "0.8.0",
    "hexo": "^4.2.1",
    "hexo-component-inferno": "^0.3.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-inferno": "^0.1.3",
    "hexo-renderer-marked": "^2.0.0",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0",
    "inferno": "^7.3.3",
    "inferno-create-element": "^7.3.3",
    "rimraf": "^3.0.2",
    "yuque-hexo": "^1.6.5"
  },
  "yuqueConfig": {
    "postPath": "source/_posts/",
    "cachePath": "yuque.json",
    "mdNameFormat": "slug",
    "adapter": "markdown",
    "concurrency": 5,
    "baseUrl": "https://www.yuque.com/api/v2",
    "login": "zonghao",
    "repo": "blog",
    "onlyPublished": true,
    "onlyPublic": true
  }
}